<div id="chosenJournalingContainer"></div>

<script>

var jouranlingArray = []
var healthyArray = []
var toDoArray = []


$(document).ready(function(){
    jouranlingArray = JSON.parse(sessionStorage.getItem("theArray"));
    if (jouranlingArray != undefined && jouranlingArray.length > 0){
        jouranlingArray.forEach(function(element){
            if(element != null){
                if(element === "healthyHabits"){
                    healthyArray = JSON.parse(sessionStorage.getItem("healthArray"));
                    $('#chosenJournalingContainer').append(createHealthForm())
                }
                if(element === "threeGratitudes"){
                    $('#chosenJournalingContainer').append(createThreeGratitudes())
                }
                if(element === "threeKindess"){
                    $('#chosenJournalingContainer').append(createThreeKindness())
                }
                if(element === "threeLessons"){
                    $('#chosenJournalingContainer').append(createThreeLessons())
                }
                if(element === "toDoList"){
                	toDoArray = JSON.parse(sessionStorage.getItem("toDoArray"));
                    $('#chosenJournalingContainer').append(createtoDoList())
                }
                
            }
        })
    }
});


